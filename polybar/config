[module/spotify]
type = custom/script
tail = true
interval = 1
; prefix symbol is shown before the text
format-prefix = ""
format = <label>
content-font = 3;
exec = ~/.config/polybar/scripts/scroll_spotify_status.sh
padding = 10
format-background = ${gradient.color-1}
format-foreground = ${tabs.color}

[module/spotify-prev]
type = custom/script
exec = echo "Û∞ô§"
format = <label>
click-left = playerctl previous -p spotify
